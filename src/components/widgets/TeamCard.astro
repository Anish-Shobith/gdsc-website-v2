---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';

const { member: { name, designation, image_url, socials }} = Astro.props;
---

<li>
  <div class="hiddena space-y-6">
    <Picture
      class="mx-auto h-40 w-40 rounded-full xl:w-56 xl:h-56 object-cover"
      widths={[200, 400, 800]}
      sizes="(max-width: 800px) 100vw, 800px"
      aspectRatio={1/1}
      loading="eager"
      src={image_url}
      alt={name}
      />
    <div class="space-y-2">
      <div class="text-lg leading-6 font-medium space-y-1">
        <h3>{name}</h3>
        <p class="text-white-500">{designation}</p>
      </div>
      <ul role="list" class="flex justify-center items-center space-x-5">
        <li>
          <a href={'mailto:' + socials[0].link} class="text-gray-400 hover:text-gray-500">
            <span class="sr-only">'dg'</span>
            <Icon name='mdi:email' class="h-8"/>
          </a>
        </li>
        {
          socials.slice(1).map(({ social, link }) => (
            <li>
              <a href={link} class="text-gray-400 hover:text-gray-500">
                <span class="sr-only">${social}</span>
                  <Icon name={'mdi:' + social} class="h-8"/>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</li>
